  "nodes": [
    {
      "id": "secrets-1",
      "type": "secrets",
      "configuration": {
        "keys": [
          "PALM_KEY",
          "GOOGLE_CSE_ID"
        ]
      }
    },
    {
      "id": "append-2",
      "type": "append",
      "configuration": {
        "accumulator": "\n"
      }
    },
    {
      "id": "get-slot",
      "type": "slot",
      "configuration": {
        "slot": "tools",
        "graph": true
      }
    },
    {
      "id": "jsonata-3",
      "type": "jsonata",
      "configuration": {
        "expression": "nodes.configuration.description.%.%.[id] ~> $join(', ')"
      }
    },
    {
      "id": "jsonata-4",
      "type": "jsonata",
      "configuration": {
        "expression": "nodes.configuration.description.%.%.[id &  ': ' & configuration.description] ~> $join('\n')"
      }
    },
    {
      "id": "promptTemplate-5",
      "type": "promptTemplate",
      "configuration": {
        "template": "Answer the following questions as best you can. You have access to the following tools:\n\n{{descriptions}}\n\nUse the following format:\n\nQuestion: the input question you must answer\nThought: you should always think about what to do\nAction: the action to take, should be one of: {{tools}}\nAction Input: the input to the action\nObservation: the result of the action\n... (this Thought/Action/Action Input/Observation can repeat N times)\nThought: I now know the final answer\nFinal Answer: the final answer to the original input question\n\nBegin!\n{{memory}}\nThought:"
      }
    },
    {
      "id": "react-completion",
      "type": "textCompletion",
      "configuration": {
        "stop-sequences": [
          "\nObservation"
        ]
      }
    },
    {
      "id": "input-6",
      "type": "input",
      "configuration": {
        "message": "Ask ReAct a question"
      }
    },
    {
      "id": "jsonata-7",
      "type": "jsonata",
      "configuration": {
        "expression": "($f := function($line, $str) { $contains($line, $str) ? $substring($line, $length($str)) }; $merge(($split('\n')[[1..2]]) @ $line.$.{'action': $f($line, 'Action: '), 'input': $f($line, 'Action Input: '),'answer': $f($line, 'Final Answer: ') }).{ action: input,'answer': answer})",
        "raw": true
      }
    },
    {
      "id": "tools-slot",
      "type": "slot",
      "configuration": {
        "slot": "tools"
      }
    },
    {
      "id": "output-8",
      "type": "output"
    }
  ],
  "kits": [
    {
      "url": "npm:@google-labs/llm-starter"
    }
  ]
